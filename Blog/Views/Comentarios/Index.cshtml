@model IEnumerable<Blog.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

<h2>Comentarios</h2>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagens)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagens.MensagemId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ComentarioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ComentarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ComentarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
